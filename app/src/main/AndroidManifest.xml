                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="named-2empty.firebaseapp.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".CoreApp" />
        <activity android:name=".loginAccount" />
        <activity android:name=".AccountCreation" />
        <activity
            android:name=".inTripScreen"
            android:parentActivityName=".CoreApp"/>

